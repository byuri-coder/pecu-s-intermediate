rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para coleções de administração: apenas administradores podem ler/escrever.
    match /adminSettings/{docId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Regra genérica para dados sensíveis acessíveis apenas por administradores.
    match /sensitiveData/{docId=**} {
        allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Adicione outras regras para coleções públicas ou de usuários aqui.
    // Exemplo: permitir que usuários leiam/escrevam seus próprios dados.
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}